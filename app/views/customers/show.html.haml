
.cus_bit

  .cus_head
    - if @customer.is_company
      = "Company: " + @customer.username.upcase
    - else
      = "User: " + @customer.username.downcase


    .cus_img
      = image_tag(customer_image(@customer), :height => '64', :title => "#{@customer.first_name} #{@customer.last_name}")

  %dl
    %dt Full name:
    %dd= @customer.first_name + " " +  @customer.last_name

    %dt Email:
    %dd= @customer.login ? @customer.email : "N / A"

    %dt Fon:
    %dd= @customer.login ? format_phone_number(@customer.fon_country, @customer.fon_city, @customer.fon) : "N / A"

    %dt Twitter:
    %dd= @customer.login && @customer.twitter_name.present? ? twitter_link(@customer.twitter_name) : "N / A"

.cus_nav
  = link_to 'List', customers_path
  \|
  = link_to 'Edit', edit_customer_path(@customer)

