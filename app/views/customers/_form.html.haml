= form_for @customer do |f|
  -if @customer.errors.any?
    #error_explanation
      %h2= "#{pluralize(@customer.errors.count, "error")} prohibited this customer from being saved:"
      %ul
        - @customer.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :username
    = f.text_field :username
  .field
    = f.label :first_name
    = f.text_field :first_name
  .field
    = f.label :last_name
    = f.text_field :last_name
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :fon_country
    = f.text_field :fon_country
  .field
    = f.label :fon_city
    = f.text_field :fon_city
  .field
    = f.label :fon
    = f.text_field :fon
  .field
    = f.label :twitter_name
    = f.text_field :twitter_name
  .field
    = f.label :image
    = f.text_field :image
  .field
    = f.label :is_company
    = f.check_box :is_company
  .actions
    = f.submit 'Save'
